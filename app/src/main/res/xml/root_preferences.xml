<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general_settings">

        <EditTextPreference
            android:defaultValue="@string/default_invalid_url"
            android:key="@string/settings_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_url" />
        <EditTextPreference
            android:defaultValue="@string/default_invalid_key"
            android:key="@string/settings_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_key" />
        <EditTextPreference
            android:defaultValue="10"
            android:key="@string/settings_site_timeout"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_site_timeout" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Advanced">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/enable_simulation_mode"
            android:title="@string/enable_simulation_mode" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/enable_verbose_si_readout"
            android:title="@string/enable_verbose_si_readout" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/always_allow_offline_mode"
            android:title="@string/always_allow_offline_mode" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/auto_choose_if_one_event"
            android:title="@string/auto_choose_if_one_event" />
    </PreferenceCategory>

</PreferenceScreen>